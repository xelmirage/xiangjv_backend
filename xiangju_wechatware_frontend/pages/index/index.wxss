.page-section-gap {
  box-sizing: border-box;
  padding: 0 30rpx;
}

.page-body-button {
  margin-bottom: 30rpx;
}

/*使屏幕变暗  */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.commodity_attr_box {
  /* height: 300rpx; */
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  border-radius: 10px;
}

.commImg {
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  background: #fff;
  border: 1px solid #f5f5f5;
  z-index: 12;
  left: 20px;
  top: -35px;
  padding: 20rpx;
  border-radius: 20rpx;
}

.commImg image {
  width: 100%;
  height: 100%;
}

.column {
  display: flex;
  flex-direction: column;
}

.sku-price {
  color: red;
  position: relative;
  left: 250rpx;
  margin: 1rpx;
}

.sku-title {
  position: relative;
  left: 250rpx;
  font-size: 12px;
  margin: 1rpx;
}

.line {
  width: 95%;
  height: 2rpx;
  display: inline-block;
  margin: 10rpx 0rpx 5rpx 0rpx;
  background-color: #fff;
  text-align: center;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

button::after {
  border: none;
}

.btn {
  margin-top: 10px;
  width: 100px;
  padding: 2px;
  /*字体大小*/
  font-size: 14px;
  /*主色调*/
  color: #fff;
  /*行高，与控件高度相等*/
  line-height: 30px;
  /*文本水平居中*/
  margin-bottom: 10px;
  justify-content: center;
  text-align: center;
  background-color: #ca2ff2;
  /* border: 2px solid #fff; */
  border-radius: 20px;
  border: none;
}

/* 日期选择 */

.picker_group {
  /* height: 85rpx; */
  height: 25px;
  /* line-height: 85rpx; */
  line-height: 25px;
  justify-content: center;
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #ca2ff2;
  margin-top: 10px;
}

.picker_group picker {
  /* background-color: yellow; */
  color: #ca2ff2;
  height: 25px;
  line-height: 25px;
  margin: 0 2%;
  padding: 0 4%;
  border: 1rpx solid #ca2ff2;
  border-radius: 20px;
}

/*LXSegmentedControl容器*/

.segmentedControl {
  /*水平居中*/
  margin: 0px auto;
  /*边框为2px 主色调为蓝*//*圆角6px*/
  border-radius: 20px;
  /*控件宽度*//* width: 240px; *//*控件高度*/
  height: 25px;
  margin-top: 10px;
}

.control1 {
  /*水平居中*/
  margin: 0px auto;
  border-radius: 20px;
  /*控件宽度*//* width: 240px; *//*控件高度*/
  height: 25px;
}

.control1 text {
  margin: 2px 5px;
  float: left;
  /*宽度为控件宽度的1/3 再减去2px的右边框*/
  width: 60px;
  /*字体大小*/
  font-size: 12px;
  /*主色调*/
  color: #000;
  /*行高，与控件高度相等*/
  line-height: 25px;
  /*文本水平居中*/
  text-align: center;
  background-color: #fff;
  border: 2px solid #efefef;
  border-radius: 20px;
}

/*普通文本*/

.segmentedControl text {
  margin: 2px 5px;
  /*水平排列*/
  float: left;
  /*宽度为控件宽度的1/3 再减去2px的右边框*/
  width: 60px;
  /*字体大小*/
  font-size: 12px;
  /*主色调*/
  color: #000;
  /*行高，与控件高度相等*/
  line-height: 25px;
  /*文本水平居中*/
  text-align: center;
  background-color: #efefef;
  border: 2px solid #fff;
  border-radius: 20px;
  /*右边距*//* border-right: 2px solid #39f; */
}

/*选中状态文本*/

.segmentedControl text.selected {
  /*同主色调*/
  background-color: #ca2ff2;
  /*前景色为白色*/
  color: white;
}

.control1 text.selected {
  /*同主色调*/
  background-color: #ca2ff2;
  /*前景色为白色*/
  color: white;
}

/*最后一个分组按钮*/

.segmentedControl text.last {
  /*不必右边框*/
  border-right: 0;
  /*高度也不必减少2px，就是控件高度的1/3*/
  width: 80px;
}

/* 聚餐选择 */

.more_container {
  height: 75px;
  background-color: #efefef;
  border-radius: 10px;
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 10rpx 10rpx;
  /* 垂直居中 */
  align-items: center;
  /* 水平居中 */
  justify-content: center;
  z-index: 2;
}

.position_group {
  height: 25px;
  line-height: 25px;
  /* line-height: 85rpx; */
  justify-content: center;
  display: flex;
  align-items: center;
  margin-top: 10px;
}

.position {
  /* 聚会位置 *//*水平排列*/
  float: left;
  /*宽度为控件宽度的1/3 再减去2px的右边框*/
  width: 80px;
  padding: 2px;
  /*字体大小*/
  font-size: 12px;
  /*主色调*/
  color: #888;
  /*行高，与控件高度相等*/
  line-height: 25px;
  /*文本水平居中*/
  text-align: center;
  background-color: #efefef;
  /* border: 2px solid #fff; */
  border-radius: 10px;
}

.icon-image {
  margin: 10px 3px 5px 5px;
  float: left;
  height: 40px;
  width: 40px;
  border-radius: 20px;
}

